{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": "last 2 versions and > 0.7%, not ie 11, iOS > 12",
        "useBuiltIns": false
      }
    ],
    ["@babel/preset-react"],
    [
      "@babel/preset-typescript",
      {
        "allowDeclareFields": true
      }
    ]
  ],
  "plugins": [
    [
      "@babel/plugin-transform-react-jsx",
      {
        "runtime": "automatic"
      }
    ]
  ]
}
